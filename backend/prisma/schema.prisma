model Category {
  id    Int     @default(autoincrement()) @id
  name String  @unique
  displayName String
  posts Post[]
}
model Comment {
  id Int     @default(autoincrement()) @id
  postId Int
  comment String
  depth Int 
  order Int
  groupNumber Int
  post Post @relation(fields: [postId], references: [id])

}


  // @@index([id])

model Post {
  id    Int     @default(autoincrement()) @id
  name String  @unique
  displayName String
  comments Comment[]
  categories Category[]
}
model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  password  String
}
datasource db {
  provider = "mysql"
  url= env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}